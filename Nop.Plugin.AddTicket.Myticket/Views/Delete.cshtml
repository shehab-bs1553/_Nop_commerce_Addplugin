@using Nop.Plugin.AddTicket.Myticket.Domain
@model MyTicketRecord
@{
    Layout = "_ColumnsTwo";
}
@section left
{
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = -1 })
}
<form method="post" asp-action="Delete">
    <div class="border p-5 mt-5">
        <div class="row pb-1">
            <h2 class="text-primary">Delete Ticket</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-4">
            <label asp-for="Body"></label>
            <input asp-for="Body" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="MyTicketView" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}