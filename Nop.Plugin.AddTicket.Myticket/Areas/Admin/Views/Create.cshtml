@using Nop.Plugin.AddTicket.Myticket.Areas.Admin.Models
@model MyTicketModel

@{
    //  Layout = "_AdminLayout";
    //page title
    <h2> Add New Ticket</h2>
    //active menu item (system name)
}
<form asp-controller="MyTicket" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
           Add new Ticket
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">Back to List</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                SaveContinue
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/AddTicket.Myticket/Areas/Admin/Views/_CreateOrUpdate.cshtml", Model)
</form>